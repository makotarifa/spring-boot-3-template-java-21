<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.angelmorando.template.repository.mybatis.AppTestMapper">

  <resultMap id="AppTestResult" type="com.angelmorando.template.dto.AppTest">
    <id property="id" column="id" />
    <result property="name" column="name" />
  </resultMap>

  <select id="findAll" resultMap="AppTestResult">
    SELECT id, name FROM app_test
  </select>

  <select id="findById" parameterType="int" resultMap="AppTestResult">
    SELECT id, name FROM app_test WHERE id = #{id}
  </select>

  <insert id="insert" parameterType="com.angelmorando.template.dto.AppTest" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO app_test (name) VALUES (#{name})
  </insert>

</mapper>
